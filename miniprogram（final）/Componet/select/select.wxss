.com-selectBox{
    width:100%;
    height: 100rpx;
    /* height:100%; */
    /* align-items: stretch; */
    border-radius: 20rpx;

}
.com-sContent{
    border: 2rpx solid #e2e2e2;
    background: white;
    font-size: 40rpx;
    padding-top: 20rpx; 
    position: relative;
    display:flex;
    justify-content:center;
    height: 100rpx;
    line-height: 60rpx;
}
.com-sImg{
    position: absolute;
    right: 20rpx;
    top: 22rpx;
    width: 32rpx;
    height: 18rpx;
    transition: all .3s ease;
}
.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    justify-content:center;
    padding:0 40rpx 0 12rpx;
    font-size: 40rpx;
}
.com-sList{
    background: white;
    width: inherit;
    position: absolute;
    border: 1px solid #e2e2e2;
    border-top: none;
    box-sizing: border-box;
    flex-wrap:wrap;
    display:column;

    z-index: 3;
    max-height: 120px;
    overflow: auto;
}
.com-sItem{
    height: 40px;
    line-height: 20rpx;
    border-top: 1px solid #e2e2e2;
    padding: 0 6px;
    padding-top: 40rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 40rpx;
}
.com-sItem:first-child{
    border-top: none;
}