<view class="page_body_list">
<!-- 早餐卡 -->
  <view class="card_foodlist">
    <!--每个餐块的view-->
    <view class="disheslist_dishesinfo">
      <!--各个菜品-->
      <button class="refresh_but" bindtap="refresh">
