page{
  background-color: #F3F3F3;
}
.page_head_array{
    width:100%;
    height:100rpx;
    display:flex;
    align-items:center;
}
.card_article{
  border:1rpx dashed white;
  background-color: white;
  display: flex;
  width: 90%;
  height: 200rpx;
  margin-top: 40rpx;
  margin-left:40rpx; 
}
.article_photo{
  width: 200rpx;
  height: 150rpx;
  margin: 20rpx;
}
.article_info{
  display: column;
  margin-top:20rpx; 
}
.article_title{
  font-size: 40rpx;
  color: black;
  letter-spacing: 6rpx;  /*字间距*/
}
.article_content{
   display:block;/*内联对象需加*/
   width:10em;/*指定宽度*/
   word-break:keep-all;/* 不换行 */
   white-space:nowrap;/* 强制在同一行内显示所有文本,直到文本结束或者遭遇 br 对象。不换行 */
   overflow:hidden;/* 内容超出宽度时隐藏超出部分的内容 */
   text-overflow:ellipsis;
   font-size: 30rpx;
   color:gray;
}







